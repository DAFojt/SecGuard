<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projekt.secguard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- <category android:name="android.intent.category.LAUNCHER" />   //LoginActivity to LAUNCHER -->
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".UserScreenActivity" />
        <activity android:name=".ProfileEditActivity" />
        <activity android:name=".AdminProfilesEditActivity" />
        <activity android:name=".AdminAddDataActivity" />
        <activity android:name=".AdminOrdersActivity" />
        <activity android:name=".AdminFinishedOrdersActivity" />
        <activity android:name=".UserOrdersTableActivity" />
        <activity android:name=".UserTrackerActivity" />
        <activity android:name=".UsersListActivity" />
        <activity android:name=".ProfileListViewActivity" />
        <activity android:name=".AdminAddCompanyActivity" />
        <activity android:name=".AdminMenageCompanyActivity" />
        <activity android:name=".AdminAddLocationActivity" />
        <activity android:name=".CalendarViewActivity" />
        <activity android:name=".TimeActivity" />
        <activity android:name=".AdminOrdersForLocationActivity"></activity>
    </application>

</manifest>