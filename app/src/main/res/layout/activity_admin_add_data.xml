<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_add_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projekt.secguard.AdminAddDataActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="0.74">

            <ImageView
                android:layout_width="224dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/add_company"
                android:id="@+id/imageView4" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.81"
                android:weightSum="1">

                <Button
                    android:text="Nowa firma"
                    android:layout_width="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/button_addCompany"
                    android:layout_height="140dp" />

                <Button
                    android:text="Zarzadzaj firmami"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:textSize="24sp"
                    android:id="@+id/button_menageCompany"
                    android:layout_weight="0.61" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_weight="0.22">

            <ImageView
                android:layout_width="224dp"
                android:layout_height="282dp"
                app:srcCompat="@drawable/add_object"
                android:id="@+id/imageView7" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Dodaj obiekt"
                    android:layout_width="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/button_addObjects"
                    android:layout_height="140dp" />

                <Button
                    android:text="Zarzadzaj obiektami"
                    android:layout_width="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/button_menageObjects"
                    android:layout_height="140dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
